{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": ["eslint:recommended", "prettier"],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "semi": ["error", "always"],

        "quotes": ["error", "double"],

        "no-multi-spaces": ["error"],

        "no-var": "error",

        "object-curly-newline": [
            "error",
            {
                "multiline": true,
                "consistent": true
            }
        ],

        "no-mixed-spaces-and-tabs": "error"
    }
}
